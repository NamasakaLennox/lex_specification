/* A lex program to count the number of words in an input file */
%{
#include <stdio.h>
#include <string.h>
int count = 0;
%}

%%
([a-zA-Z0-9])+ {count++;}
.
%%

int yywrap(void) {}

int main(void)
{
yyin = fopen("input.txt", "r");
yylex();

printf("Total number of words is: %d\n", count);
return (0);
}
